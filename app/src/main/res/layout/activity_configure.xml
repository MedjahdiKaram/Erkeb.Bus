<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfigureActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="15dp">

            <!--<ImageView android:src="@drawable/logo"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_marginBottom="24dp"
                android:layout_gravity="center_horizontal" />
                -->

            <!--  BUS Id number Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/busIdTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Identifiant du bus"
                    android:inputType="text"
                    android:text="B01" />
            </android.support.design.widget.TextInputLayout>

            <!--  Line number Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/lineNumTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="N° de la ligne"
                    android:inputType="text"
                    android:text="L14" />
            </android.support.design.widget.TextInputLayout>

            <!-- Amount Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/tarifTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tarif référenciel"
                    android:inputType="number"
                    android:text="15" />
            </android.support.design.widget.TextInputLayout>

            <!-- Minimal composting amount Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/minCompostTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tarif minimal de compostage"
                    android:inputType="number"
                    android:text="0" />
            </android.support.design.widget.TextInputLayout>

            <!-- PID Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/pidTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Identifiant du matériel"
                    android:inputType="text"
                    android:text="01234" />
            </android.support.design.widget.TextInputLayout>

            <!-- VID Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/vidTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Identifiant du vendeur"
                    android:inputType="text"
                    android:text="6790" />
            </android.support.design.widget.TextInputLayout>

            <!-- Save Button -->
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/saveBtn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="24dp"
                android:padding="12dp"
                android:text="Sauvegarder" />


            <!-- Save hint Button -->
            <TextView
                android:id="@+id/config_hint"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:text="Cette interface n'apparêt qu'une seule fois ! Sahhit"
                android:textSize="16dip" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>